{
  "name": "custom-copilot-provider",
  "displayName": "Custom Copilot Provider",
  "description": "Bring-your-own-key chat provider for GitHub Copilot in VS Code.",
  "version": "0.1.0",
  "publisher": "local-user",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "customCopilotProvider.configureApiKey",
        "category": "Custom Copilot Provider",
        "title": "Set API Key"
      }
    ],
    "configuration": {
      "title": "Custom Copilot Provider",
      "properties": {
        "customCopilotProvider.defaultModel": {
          "type": "string",
          "default": "kimi-k2-thinking",
          "markdownDescription": "Model identifier to request from the configured vendor (default is `kimi-k2-thinking`)."
        },
        "customCopilotProvider.apiBaseUrl": {
          "type": "string",
          "default": "https://api.moonshot.cn/v1",
          "markdownDescription": "Base URL for the chat completions endpoint."
        },
        "customCopilotProvider.temperature": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 2,
          "markdownDescription": "Sampling temperature forwarded to the vendor API."
        }
      }
    },
    "languageModelChatProviders": [
      {
        "vendor": "custom-byok",
        "displayName": "Custom Provider"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.6.3"
  }
}
