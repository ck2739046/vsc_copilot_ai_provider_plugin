{
  "name": "custom-copilot-provider",
  "displayName": "Custom Copilot Provider",
  "description": "Bring-your-own-key chat provider for GitHub Copilot in VS Code.",
  "version": "0.1.0",
  "publisher": "local-user",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "customCopilotProvider.configureApiKey",
        "category": "Custom Copilot Provider",
        "title": "Manage API Keys"
      }
    ],
    "configuration": [
      {
        "title": "Custom Copilot Provider — General",
        "properties": {
          "customCopilotProvider.systemPrompt": {
            "type": "string",
            "default": "You are a GitHub Copilot chat provider running inside VS Code. Always preserve code formatting and prefer tool calls when they produce more accurate answers.",
            "markdownDescription": "Initial system prompt inserted ahead of every chat turn."
          },
          "customCopilotProvider.reasoningFlushInterval": {
            "type": "number",
            "default": 80,
            "minimum": 16,
            "maximum": 500,
            "markdownDescription": "Milliseconds between reasoning stream flushes to the UI."
          }
        }
      },
      {
        "title": "Custom Copilot Provider — Kimi",
        "properties": {
          "customCopilotProvider.kimi.enabled": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Expose the model in the Copilot provider list."
          },
          "customCopilotProvider.kimi.modelId": {
            "type": "string",
            "default": "kimi-k2-thinking",
            "markdownDescription": "Identifier shown to VS Code"
          },
          "customCopilotProvider.kimi.apiModelId": {
            "type": "string",
            "default": "kimi-k2-thinking",
            "markdownDescription": "Model name for API. (Important)"
          },
          "customCopilotProvider.kimi.displayName": {
            "type": "string",
            "default": "Kimi K2 Thinking",
            "markdownDescription": "Main model title."
          },
          "customCopilotProvider.kimi.detail": {
            "type": "string",
            "default": "api",
            "markdownDescription": "Family string used for VS Code heuristics."
          },
          "customCopilotProvider.kimi.family": {
            "type": "string",
            "default": "kimi",
            "markdownDescription": "Family string used for VS Code heuristics."
          },
          "customCopilotProvider.kimi.tooltip": {
            "type": "string",
            "default": "kimi-k2-thinking",
            "markdownDescription": "Tooltip shown in VS Code model pickers."
          },
          "customCopilotProvider.kimi.baseUrl": {
            "type": "string",
            "default": "https://api.moonshot.cn/v1",
            "markdownDescription": "Base URL for API. (Important)"
          },
          "customCopilotProvider.kimi.maxInputTokens": {
            "type": "number",
            "default": 160000,
            "minimum": 1000,
            "markdownDescription": "Maximum input tokens."
          },
          "customCopilotProvider.kimi.maxOutputTokens": {
            "type": "number",
            "default": 160000,
            "minimum": 1000,
            "markdownDescription": "Maximum output tokens."
          },
          "customCopilotProvider.kimi.temperature": {
            "type": "number",
            "default": 1,
            "minimum": 0,
            "maximum": 2,
            "markdownDescription": "Temperature for API. (Important)"
          },
          "customCopilotProvider.kimi.reasoningCharLimit": {
            "type": "number",
            "default": 64000,
            "minimum": 1000,
            "markdownDescription": "Maximum characters of reasoning text to stream."
          },
          "customCopilotProvider.kimi.supportsReasoning": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Whether the model streams `reasoning_content` deltas."
          }
        }
      },
      {
        "title": "Custom Copilot Provider — DeepSeek",
        "properties": {
          "customCopilotProvider.deepseek.enabled": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Expose the model in the Copilot provider list."
          },
          "customCopilotProvider.deepseek.modelId": {
            "type": "string",
            "default": "deepseek-reasoner",
            "markdownDescription": "Identifier shown to VS Code"
          },
          "customCopilotProvider.deepseek.apiModelId": {
            "type": "string",
            "default": "deepseek-reasoner",
            "markdownDescription": "Model name for API. (Important)"
          },
          "customCopilotProvider.deepseek.displayName": {
            "type": "string",
            "default": "DeepSeek Reasoner",
            "markdownDescription": "Main model title."
          },
          "customCopilotProvider.deepseek.detail": {
            "type": "string",
            "default": "api",
            "markdownDescription": "Grey text on the right side of model pickers."
          },
          "customCopilotProvider.deepseek.family": {
            "type": "string",
            "default": "deepseek",
            "markdownDescription": "Family string used for VS Code heuristics."
          },
          "customCopilotProvider.deepseek.tooltip": {
            "type": "string",
            "default": "deepseek-reasoner",
            "markdownDescription": "Tooltip shown in model pickers."
          },
          "customCopilotProvider.deepseek.baseUrl": {
            "type": "string",
            "default": "https://api.deepseek.com/v1",
            "markdownDescription": "Base URL for API. (Important)"
          },
          "customCopilotProvider.deepseek.maxInputTokens": {
            "type": "number",
            "default": 128000,
            "minimum": 1000,
            "markdownDescription": "Maximum input tokens."
          },
          "customCopilotProvider.deepseek.maxOutputTokens": {
            "type": "number",
            "default": 64000,
            "minimum": 1000,
            "markdownDescription": "Maximum output tokens."
          },
          "customCopilotProvider.deepseek.temperature": {
            "type": "number",
            "default": 0.5,
            "minimum": 0,
            "maximum": 2,
            "markdownDescription": "Temperature for API. (Important)"
          },
          "customCopilotProvider.deepseek.reasoningCharLimit": {
            "type": "number",
            "default": 32000,
            "minimum": 1000,
            "markdownDescription": "Maximum characters of reasoning text to stream."
          },
          "customCopilotProvider.deepseek.supportsReasoning": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Whether the model streams `reasoning_content` deltas."
          }
        }
      },
      {
        "title": "Custom Copilot Provider — Zhipu GLM",
        "properties": {
          "customCopilotProvider.glm.enabled": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Expose the model in the Copilot provider list."
          },
          "customCopilotProvider.glm.modelId": {
            "type": "string",
            "default": "glm-4.6",
            "markdownDescription": "Identifier shown to VS Code"
          },
          "customCopilotProvider.glm.apiModelId": {
            "type": "string",
            "default": "glm-4.6",
            "markdownDescription": "Model name for API. (Important)"
          },
          "customCopilotProvider.glm.displayName": {
            "type": "string",
            "default": "GLM-4.6",
            "markdownDescription": "Main model title."
          },
          "customCopilotProvider.glm.detail": {
            "type": "string",
            "default": "api",
            "markdownDescription": "Grey text on the right side of model pickers."
          },
          "customCopilotProvider.glm.family": {
            "type": "string",
            "default": "glm",
            "markdownDescription": "Family string used for VS Code heuristics."
          },
          "customCopilotProvider.glm.tooltip": {
            "type": "string",
            "default": "glm-4.6",
            "markdownDescription": "Tooltip shown in model pickers."
          },
          "customCopilotProvider.glm.baseUrl": {
            "type": "string",
            "default": "https://open.bigmodel.cn/api/coding/paas/v4",
            "markdownDescription": "Base URL for API. (Important)"
          },
          "customCopilotProvider.glm.maxInputTokens": {
            "type": "number",
            "default": 190000,
            "minimum": 1000,
            "markdownDescription": "Maximum input tokens."
          },
          "customCopilotProvider.glm.maxOutputTokens": {
            "type": "number",
            "default": 120000,
            "minimum": 1000,
            "markdownDescription": "Maximum output tokens."
          },
          "customCopilotProvider.glm.temperature": {
            "type": "number",
            "default": 1.0,
            "minimum": 0,
            "maximum": 1,
            "markdownDescription": "Sampling temperature for API calls."
          },
          "customCopilotProvider.glm.reasoningCharLimit": {
            "type": "number",
            "default": 8000,
            "minimum": 1000,
            "markdownDescription": "Maximum characters of reasoning text to stream."
          },
          "customCopilotProvider.glm.supportsReasoning": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Whether the model streams `reasoning_content` deltas."
          }
        }
      }
    ],
    "languageModelChatProviders": [
      {
        "vendor": "custom-copilot-provider",
        "displayName": "Custom-Provider"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/vscode": "^1.104.0",
    "typescript": "^5.6.3"
  }
}
